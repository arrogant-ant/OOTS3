<LinearLayout android:id="@+id/ll1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_image"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />
        <ImageView
            android:id="@+id/iv1_refill"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="30dp"/>



    </LinearLayout>

    <TextView
        android:id="@+id/tv1_refill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Romesh Mani Lall"
        android:textColor="#f00"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv2_refill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID:123344"
        android:textColor="#f00"
        android:textSize="15dp" />

    <RatingBar
        android:id="@+id/rb1_refill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv3_refill"
        android:textColor="#f00"
        android:textSize="18dp"
        android:text="-----------Service Refill------------"
        android:textAlignment="center"
        android:textStyle="bold"

        />
    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv4_refill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="Rs.999"


            android:textAlignment="center"
            android:textColor="#f00"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/sp1_refill"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textAlignment="center"
            android:visibility="visible"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll5_refill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv5_refill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="Rs.999"

            android:textAlignment="center"
            android:textColor="#f00"
            android:textSize="25dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv6_refill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text=": Penalty Amt"

            android:textAlignment="center"
            android:textColor="#f00"
            android:textSize="25dp"
            android:textStyle="bold" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll6_refill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv7_refill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="Rs.999"
            android:textAlignment="center"
            android:textColor="#f00"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv8_refill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text=": Unpaid Bill"
            android:textAlignment="center"
            android:textColor="#f00"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/et1_Refill"
        android:text="Payment Descriptions:"
        android:textSize="15dp"
        android:layout_margin="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b1_Refill"
        android:text="Pay"
        android:background="#51fc3a"
        android:textStyle="bold"
        />


</LinearLayout>