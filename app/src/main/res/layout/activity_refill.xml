<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- toolbar -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_provider" />

    <TextView
        android:id="@+id/tv3_refill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-----------Service Refill------------"
        android:textAlignment="center"
        android:textColor="#f00"
        android:textSize="18dp"
        android:textStyle="bold"

        />

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv4_refill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="Rs.999"


            android:textAlignment="center"
            android:textColor="#f00"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/sp1_refill"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textAlignment="center"
            android:visibility="visible"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll5_refill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv5_refill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="Rs.999"

            android:textAlignment="center"
            android:textColor="#f00"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv6_refill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text=": Penalty Amt"

            android:textAlignment="center"
            android:textColor="#f00"
            android:textSize="25dp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll6_refill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv7_refill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="Rs.999"
            android:textAlignment="center"
            android:textColor="#f00"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv8_refill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text=": Unpaid Bill"
            android:textAlignment="center"
            android:textColor="#f00"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/et1_Refill"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:text="Payment Descriptions:"
        android:textSize="15dp" />

    <Button
        android:id="@+id/b1_Refill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#51fc3a"
        android:text="Pay"
        android:textStyle="bold" />


</LinearLayout>