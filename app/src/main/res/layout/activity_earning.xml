<LinearLayout android:id="@+id/ll1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="5dp"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:id="@+id/tv1_earning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CUSTOMER"
            android:textColor="#f00"
            android:textSize="15dp"
            android:textAlignment="center"
             />
        <TextView
            android:id="@+id/tv2_earning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SERVICE DETAILS"
            android:textColor="#f00"
            android:textSize="15dp"
            android:textAlignment="center"

            android:layout_marginLeft="40dp"/>
        <TextView
            android:id="@+id/tv3_earning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHARGE"
            android:textColor="#f00"
            android:textAlignment="center"
            android:textSize="15dp"

            android:layout_marginLeft="60dp"
          />
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_earning"
        android:divider="#a2e9f1"
        android:dividerHeight="2dp"
        android:footerDividersEnabled="false"
        >

    </ListView>

    <LinearLayout android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:id="@+id/tv4_earning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today's Total:12323"
            android:textSize="20dp"
            android:textColor="#f00"

            />
        <TextView
            android:id="@+id/tv5_earning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total:"
            android:textColor="#f00"
            android:textSize="20dp"
            android:layout_marginLeft="60dp"
            android:textAlignment="center"
           />

    </LinearLayout>


</LinearLayout>
