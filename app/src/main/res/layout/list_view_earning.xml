<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_notification1"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ll_earning"
    android:orientation="vertical">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv_earning"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/tv1_earning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer"
        android:textColor="#f00"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_weight="0.62" />
    <TextView
        android:id="@+id/tv2_earning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Id:\n1324567"
        android:textColor="#f00"
        android:textAlignment="center"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/tv3_earning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booking D and T"
        android:textColor="#f00"
        android:textAlignment="center"
        android:textSize="15dp"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll2_earning"
        android:orientation="vertical"
        android:layout_marginLeft="30dp">
        <TextView
            android:id="@+id/tv4_earning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Service Details"
            android:textColor="#f00"
            android:layout_marginTop="50dp"
            android:textSize="18dp"
            android:textAlignment="center"
            android:layout_weight="0.62" />
        <TextView
            android:id="@+id/tv5_earning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery-D and T"
            android:textColor="#f00"
            android:textAlignment="center"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tv6_earning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(Visit/Finished)"
            android:textColor="#f00"
            android:textAlignment="center"
            android:textSize="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll3_earning"
        android:orientation="vertical"
        android:layout_marginLeft="40dp">
        <TextView
            android:id="@+id/tv7_earning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rs"
            android:textColor="#f00"
            android:textSize="18dp"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:layout_weight="0.62" />
        <TextView
            android:id="@+id/tv8_earning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="275.00"
            android:textColor="#f00"
            android:textAlignment="center"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tv9_earning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(with GST@5%)"
            android:textColor="#f00"
            android:textAlignment="center"
            android:textSize="10dp"
            />
    </LinearLayout>

</LinearLayout>